<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ingredients_recyclerview_item_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="Maggi"
        app:layout_constraintLeft_toRightOf="@+id/ingredients_recyclerview_number_textview"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/ingredients_recyclerview_detail_textview"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/ingredients_recyclerview_number_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="1"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/ingredients_recyclerview_item_textview" />

    <TextView
        android:id="@+id/ingredients_recyclerview_detail_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        tools:text="5 Cubes"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/ingredients_recyclerview_item_textview"
        android:layout_marginBottom="0dp" />

</android.support.constraint.ConstraintLayout>